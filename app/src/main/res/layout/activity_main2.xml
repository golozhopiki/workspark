<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_marginVertical="35sp"
    android:layout_marginHorizontal="36sp"
    tools:context=".MainActivity2">


    <ImageView
        android:id="@+id/png"
        android:layout_width="wrap_content"
        android:layout_height="320sp"
        android:src="@drawable/frame"
        android:layout_gravity="center"
        android:contentDescription="@string/png"
        />
    <TextView
        android:id="@+id/find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:fontFamily="@font/montserrat_extrabold"
        android:textColor="@color/main_color"
        android:textSize="22sp"
        android:text="@string/find"

        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/text"
        android:textSize="22sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonConfirm1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_first_button"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/zdanie"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</LinearLayout>

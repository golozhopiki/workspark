<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:color">@color/main</item>
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">54dp</item>

    </style>
    <style name="textCardView">
        <item name="android:gravity">fill_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="imageCardView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
       <item name="android:layout_centerVertical">true</item>
    </style>
</resources>



